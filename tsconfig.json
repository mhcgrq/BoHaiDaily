{
    "compilerOptions": {
        "sourceMap": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "target": "es2015",
        "module": "es2015",
        "strict": true,
        "jsx": "react-native",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "baseUrl": "."
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}